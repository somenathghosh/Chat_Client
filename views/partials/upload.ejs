<% if (settings.files.enable) { %>
<div id="lcb-upload" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title"><i class="fa fa-upload"></i> Upload </h4>
            </div>
            <div class="modal-body dropzone" id="client-dropzone">
                <form action="./upload" method="post"  enctype="multipart/form-data" >
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <div class="fallback">
                        <input name="file" type="file" multiple />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">
                    Cancel
                </button>
                <!--<button type="submit" class="btn btn-primary indicator" name="submit">
                    <i class="icon-ok"></i> Upload 
                </button>-->
            </div>
        </div>
    </div>
</div>
<% } %>
